<!-- Header -->
    <header>
        <div class="container">
            <div class="row">
                <% if(typeof(movie) !== 'undefined') { %>
                <div class="col-lg-12">
                    <img class="img-circle img-responsive" src="<%= movie.thumb %>" alt="">
                    <div class="intro-text">
                        <span class="name"><%= movie.name %></span>
                        <hr class="star-light">
                        <span class="skills"><%= movie.review %></span>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </header>
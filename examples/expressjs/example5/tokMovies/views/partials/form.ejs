    <section id="newMovie">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>New Movie</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    
                    <form action="/new" method="POST" >
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>Name</label>
                                <input type="text" name="name" class="form-control" placeholder="Name" id="name" required data-validation-required-message="Please enter movie name.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>Rating</label>
                                <input type="number" name= "rating" class="form-control" placeholder="Movie Rating" id="rating" required data-validation-required-message="Rate the movie.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>Availability</label>
                                <input type="number" name="availability" class="form-control" placeholder="Movie Availability" id="availability" required data-validation-required-message="movie availability.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label> Thumbnail URL</label>
                                <input type="input" name= "thumb" class="form-control" placeholder="Thumbnail URL" id="rating" required data-validation-required-message="Thumbnail URL.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-12 floating-label-form-group controls">
                                <label>Review</label>
                                <textarea rows="5" name="review" class="form-control" placeholder="Your Review" id="review" required data-validation-required-message="Please enter your review."></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <br>
                        <div id="success"></div>
                        <div class="row">
                            <div class="form-group col-xs-12">
                                <button type="submit" class="btn btn-success btn-lg">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
<!-- Portfolio Grid Section -->
    <section id="movies">
        <div class="container">


            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Movies</h2>
                    <hr class="star-primary">
                </div>
            </div>

           
            <div class="row">
                <% for(var i=1; i<moviesData.length; i++){ %>
               
                <div class="col-sm-4 portfolio-item">
                    <a href="#portfolioModal<%=i%>" class="portfolio-link" data-toggle="modal">
                        <div class="caption">
                            <div class="caption-content">
                                <i class="fa fa-search-plus fa-3x"></i>
                            </div>
                        </div>
                        <img src="<%= moviesData[i].thumb %>" class="img-responsive" style="width: 340px;height: 270px;">
                    </a>
                </div>
                <%}%>
            </div>
        </div>
    </section>
